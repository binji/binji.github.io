<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-ghcolors.css' | url }}">

    <!-- copy-pasted favicon stuff from http://realfavicongenerator.net/ -->
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">

  </head>

  <body>
    <header class="site-header" role="banner">
      <div class="wrapper header-wrapper">
        <img class="site-binji-img" src="{{ metadata.url }}/assets/benji-banner-4x.png"></img>
        <a class="site-title" href="{{ "/" | url}}">{{ metadata.title | escape }}</a>

        <nav class="site-nav">
          <div class="trigger">
            {% for my_page in collections.page %}
              {% if my_page.data.title %}
              <a class="page-link" href="{{ my_page.url | url }}">{{ my_page.data.title | escape }}</a>
              {% endif %}
            {% endfor %}
          </div>
        </nav>
      </div>

    </header>

    <main class="page-content" aria-label="Content">
      <div class="wrapper">
        {{ content | safe }}
      </div>
    </main>

    <footer class="site-footer">
      <div class="wrapper">
        <div class="footer-wrapper">
          <ul class="footer">
            <li>
              by {{ metadata.author | escape }}
            </li>
            <li>
              {% include 'icon-github.html' %}
              {% include 'icon-twitter.html' %}
            </li>
          </div>
        <div>
        <div class="footer-col-wrapper">
        </div>
      </div>
    </footer>
  </body>
</html>
